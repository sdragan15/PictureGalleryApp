<Application x:Class="PictureGalleryApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PictureGalleryApp"
             xmlns:viewModel="clr-namespace:PictureGalleryApp.ViewModel"
             xmlns:views="clr-namespace:PictureGalleryApp.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModel:SignUpViewModel}">
            <views:SignUpView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>
    </Application.Resources>
    
</Application>
